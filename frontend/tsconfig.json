{
    "esm": true,
    "compilerOptions": {
        "sourceMap": true,
        "strict": true,
        "module": "Node16",
        "moduleResolution": "Node",
        "target": "ES2021",
        "jsx": "preserve",
        "resolveJsonModule": true,
        "useDefineForClassFields": true,
        "lib": [
            "ES2021",
            "DOM"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "types": [
            "vite/client",
            "jest"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.test.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
