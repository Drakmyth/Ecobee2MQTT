        "test:coverage": "jest --coverage"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Drakmyth/Ecobee2MQTT.git"
    },
    "keywords": [
        "ecobee",
        "mqtt",
        "iot",
        "bridge"
    ],
    "author": "Shaun Hamman",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Drakmyth/Ecobee2MQTT/issues"
    },
    "homepage": "https://github.com/Drakmyth/Ecobee2MQTT",
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/jest": "^28.1.6",
        "@types/js-yaml": "^4.0.5",
        "@types/node": "^18.6.1",
        "@types/supertest": "^2.0.12",
        "jest": "^28.1.3",
        "nodemon": "^2.0.19",
        "supertest": "^6.2.4",
        "ts-jest": "^28.0.7",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
