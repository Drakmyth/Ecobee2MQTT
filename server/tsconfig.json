{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "target": "ES2021",
        "esModuleInterop": true,
        "lib": [
            "ES2021"
        ]
    },
    "esm": true,
    "types": [
        "jest"
    ],
    "include": [
        "src/**/*.ts",
        "tests/**/*.test.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
